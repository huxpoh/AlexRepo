@model IEnumerable<Google.Apis.Sample.MVC.Models.FileModel>

@{
    ViewBag.Title = "Drive";
}

<table class="table table-condensed table-bordered">
    <tr>
        <th>
            Title
        </th>
        <th>
            Created Date
        </th>
        <th>
            Actions
        </th>
         <th>
            Filtering
        </th>
    </tr>
    @foreach (var file in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => file.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => file.CreatedDate)
            </td>
            <td>
                @foreach (var ff in file.ExprotList)
                {
                    <a href="@ff" class = "btn btn-xs btn-success">Save as @ff.Substring(ff.LastIndexOf('=') + 1)</a>
                }
            </td>

            <td>
                  @foreach (var ff in file.ExprotList){
                    if (ff.Substring(ff.LastIndexOf('=') + 1) == "xlsx")
                    {
                       <a href="/Home/query/?downloaduri=@ff" class = "btn btn-xs btn-warning">Querying</a>
                    }
                }
                
            </td>
        </tr>
    }
</table>
